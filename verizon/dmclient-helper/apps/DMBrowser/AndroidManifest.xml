<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.verizon.dmbrowser"
    android:versionCode="1"
    android:versionName="1.0" >

    <original-package android:name="com.verizon.dmbrowser" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="18"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/system_update"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.verizon.dmbrowser.Browser"
            android:exported="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:excludeFromRecents="true"
            android:icon="@drawable/system_update"
            android:label="@string/dm_browser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.verizon.dmbrowser.BROWSER"/>
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
